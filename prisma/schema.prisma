generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  sessions      Session[]
  username      String    @unique
  password_hash String
  posts         Post[]
  likedPosts    Like[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Post {
  title     String
  id        Int       @id @default(autoincrement())
  body      String
  userId    String
  createdAt DateTime
  editedAt  DateTime?
  likes     Like[]

  user User @relation(references: [id], fields: [userId])
}

model Like {
  id     Int    @id @default(autoincrement())
  postId Int
  userId String

  post Post @relation(references: [id], fields: [postId])
  user User @relation(references: [id], fields: [userId])
}
